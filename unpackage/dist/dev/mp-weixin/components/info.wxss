.list {
  width: 750rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-flow: row wrap;
          flex-flow: row wrap;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.list .list_item {
  height: 600rpx;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  width: 45%;
  margin: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-flow: column ;
          flex-flow: column ;
  background-color: #FFFFFF;
}
.list .list_item .list_img {
  height: 60%;
  width: 100%;
}
.list .list_item .list_img image {
  width: 100%;
}
.list .list_item .list_title text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 3rem;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: pink;
  font-weight: bold;
}

